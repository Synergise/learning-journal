<%= form_for(glossary) do |f| %>
    <%= f.label :term %>
    <%= f.text_field :term, autofocus: true, autocomplete: "term" %><br />

    <%= f.label :definition %>
    <%= f.text_field :definition, autofocus: true, autocomplete: "definition" %><br />

    <%= f.label :label_list %>
    <%= f.text_field :label_list %><br />

    <%= f.submit submit_text %>
<% end %>